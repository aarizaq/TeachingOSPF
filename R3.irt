ifconfig:

# ethernet card 0 of router - connected to R1
name: ppp0
  inet_addr: 192.168.3.2
  Mask: 255.255.255.255
  Groups: 224.0.0.5
  MTU: 1500
  Metric: 2
  POINTTOPOINT MULTICAST

# ethernet card 0 of router - connected to R1
name: ppp1
  inet_addr: 192.168.5.1
  Mask: 255.255.255.255
  Groups: 224.0.0.5
  MTU: 1500
  Metric: 2
  POINTTOPOINT MULTICAST
  
# ethernet card 1 of router - connected to N2
name: ppp2
   inet_addr: 192.168.6.1
  Mask: 255.255.255.0
  Groups: 224.0.0.5
  MTU: 1500
  Metric: 2
  POINTTOPOINT MULTICAST

ifconfigend.

route:

224.0.0.0 * 240.0.0.0   H 0 ppp0
224.0.0.0 * 240.0.0.0   H 0 ppp1
224.0.0.0 * 240.0.0.0   H 0 ppp2

routeend.
